{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "lib": ["ESNext", "DOM"],
    "target": "ES6",
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@tests": ["./tests"],
      "@tests/*": ["./tests/*"]
    },
    "types": ["jest", "unplugin-vue2-script-setup/types", "unplugin-vue2-script-setup/ref-macros"]
  },
  "exclude": ["node_modules", "dist"]
}
